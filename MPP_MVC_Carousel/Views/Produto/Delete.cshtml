@model MPP_MVC_Carousel.Models.CategoriaModel
@{
    ViewData["Title"] = "Gestão de Produtos";
    // Força o uso do Layout Admin
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml"; 
}
<h1>Excluir Categoria</h1>

@if (ViewBag.ErroExclusao != null)
{
    <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading">Ação Bloqueada!</h4>
        <p>@ViewBag.ErroExclusao</p>
        <hr>
        <p class="mb-0">Remova os produtos desta categoria antes de tentar excluí-la.</p>
    </div>
    
    <div>
        <a asp-action="Index" class="btn btn-secondary">Voltar para Lista</a>
    </div>
}
else
{
    <h3>Tem certeza que deseja excluir isso?</h3>
    <div>
        <h4>Categoria: @Model.Nome</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Descricao)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Descricao)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Confirmar Exclusão" class="btn btn-danger" /> 
            | <a asp-action="Index" class="btn btn-light">Cancelar</a>
        </form>
    </div>
}

