@model IEnumerable<MPP_MVC_Carousel.Models.CategoriaModel>
@{
    ViewData["Title"] = "Gestão de Categorias";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Categorias</h1>
    <p>
        <a asp-action="Create" class="btn btn-success">
            + Nova Categoria
        </a>
    </p>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        @if (!Model.Any())
        {
            <div class="alert alert-info" role="alert">
                Nenhuma categoria cadastrada ainda. Clique em "Nova Categoria" para começar.
            </div>
        }
        else
        {
            <table class="table table-hover table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th style="width: 25%">
                            @Html.DisplayNameFor(model => model.Nome)
                        </th>
                        <th style="width: 50%">
                            @Html.DisplayNameFor(model => model.Descricao)
                        </th>
                        <th style="width: 25%" class="text-center">
                            Ações
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="font-weight-bold">
                                @Html.DisplayFor(modelItem => item.Nome)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Descricao)
                            </td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning text-white" title="Editar">
                                        Editar
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white" title="Detalhes">
                                        Detalhes
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Excluir">
                                        Excluir
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>

