@model IEnumerable<MPP_MVC_Carousel.Models.CategoriaModel>

@{
    ViewData["Title"] = "Vitrine";
}

<div class="text-center p-5 bg-light mb-4 rounded">
    <h1 class="display-4">Bem-vindo à Nossa Loja</h1>
    <p class="lead">Confira nossos produtos separados por categorias exclusivas.</p>
</div>

@foreach (var categoria in Model)
{
    <div class="category-section mb-5">
        <div class="d-flex justify-content-between align-items-center border-bottom mb-3 pb-2">
            <h2 class="text-dark">@categoria.Nome</h2>
            <small class="text-muted">@categoria.Descricao</small>
        </div>

        <div class="row">
            @foreach (var produto in categoria.Produtos)
            {
                <div class="col-md-3 col-sm-6 mb-4">
                    <div class="card h-100 shadow-sm border-0">
                        <a asp-controller="Produto" asp-action="Details" asp-route-id="@produto.Id">
                            @if (!string.IsNullOrEmpty(produto.Imagem))
                            {
                                <img src="~/produtos/@produto.Imagem" class="card-img-top" alt="@produto.Nome" style="height: 200px; object-fit: cover;">
                            }
                            else
                            {
                                <img src="https://via.placeholder.com/300x200?text=Produto" class="card-img-top" style="height: 200px; object-fit: cover;">
                            }
                        </a>

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">
                                <a asp-controller="Produto" asp-action="Details" asp-route-id="@produto.Id" class="text-dark text-decoration-none">
                                    @produto.Nome
                                </a>
                            </h5>
                            <p class="card-text text-primary font-weight-bold mt-auto">
                                @produto.Preco.ToString("C")
                            </p>
                            <a asp-controller="Produto" asp-action="Details" asp-route-id="@produto.Id" class="btn btn-outline-primary btn-sm mt-2">
                                Ver Detalhes
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}

@if (!Model.Any())
{
    <div class="alert alert-warning text-center">
        Nenhum produto ou categoria cadastrado para exibição na vitrine.
    </div>
}




