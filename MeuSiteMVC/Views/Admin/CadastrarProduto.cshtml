@model MeuSiteMVC.Models.Produto

@{
    ViewData["Title"] = "Cadastrar Produto";
}

<h2>Cadastro de Produto</h2>

<form method="post">
    <div class="mb-3">
        <label asp-for="Nome" class="form-label">Nome</label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Descricao" class="form-label">Descrição</label>
        <textarea asp-for="Descricao" class="form-control"></textarea>
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Preco" class="form-label">Preço (R$)</label>
        <input asp-for="Preco" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Preco" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CategoriaId" class="form-label">Categoria</label>
        <select asp-for="CategoriaId" class="form-select">
            <option value="">Selecione</option>
            @foreach (var cat in ViewBag.Categorias as List<MeuSiteMVC.Models.Categoria>)
            {
                <option value="@cat.Id">@cat.Nome</option>
            }
        </select>
        <span asp-validation-for="CategoriaId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Cadastrar</button>
    <a href="/Produtos" class="btn btn-secondary">Cancelar</a>
</form>