@model MeuSiteMVC.Models.Categoria

@{
    ViewData["Title"] = "Cadastrar Categoria";
}

<h2>Cadastro de Categoria</h2>

<form method="post">
    <div class="mb-3">
        <label asp-for="Nome" class="form-label">Nome da Categoria</label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Nome" class="form-label">Descrição da Categoria</label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Cadastrar</button>
    <a href="/Admin/CadastrarProduto" class="btn btn-secondary">Voltar</a>
</form>