@model List<MeuSiteMVC.Models.Produto>

@{
    ViewData["Title"] = "Gerenciar Produtos";
}

<h2>Lista de Produtos</h2>
<p>
    <a asp-action="Create" class="btn btn-success">Novo Produto</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Preço</th>
            <th>Categoria</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Nome</td>
                <td>R$ @p.Preco.ToString("N2")</td>
                <td>
                    @(DadosEmMemoria.Categorias.FirstOrDefault(c => c.Id == p.CategoriaId)?.Nome ?? "—")
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@p.Id" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Delete" asp-route-id="@p.Id" class="btn btn-sm btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>