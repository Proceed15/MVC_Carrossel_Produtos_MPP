@model MeuSiteMVC.Models.Pedido

@{
    ViewData["Title"] = "Editar Pedido";
}

<h2>Editar Pedido #@Model.Id</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Data" />

    <div class="mb-3">
        <label asp-for="Cliente" class="form-label"></label>
        <input asp-for="Cliente" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Status" class="form-label"></label>
        <select asp-for="Status" class="form-select">
            <option>Pendente</option>
            <option>Pago</option>
            <option>Cancelado</option>
        </select>
    </div>

    <button class="btn btn-primary">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>